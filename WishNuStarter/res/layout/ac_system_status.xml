<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:keepScreenOn="true">
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_weight="1" android:background="@drawable/test_wall2">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
			android:text="@string/wishnu" android:layout_marginTop="5dip"
			android:textSize="25sp" android:textColor="#ffffff"
		    android:shadowColor="#000000" android:shadowRadius="3"  
        	android:shadowDx="1" android:shadowDy="1"/>
		<ScrollView
        android:id="@+id/AcSystemStatusScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical" >
        
		<TableLayout 
			android:gravity="center" android:id="@+id/TableLayout01"
			android:layout_width="300dip" android:layout_height="wrap_content"
			android:layout_gravity="center" android:layout_weight="1">
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:gravity="center" 
				android:layout_marginLeft="5dip">
				<TextView android:layout_height="wrap_content" android:layout_width="60pt"
					android:textColor="#FFF" android:text="root" android:textSize="20sp" 
					android:shadowColor="#000000" android:shadowRadius="2.5"  
        			android:shadowDx="1" android:shadowDy="1" android:layout_marginLeft="5dip"/>
				<ImageView android:id="@+id/AcSystemStatusRootImage"
					android:layout_height="wrap_content" android:layout_width="10pt"
					android:layout_marginRight="5dp" />
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:gravity="center" android:layout_marginLeft="5dip">
				<TextView android:layout_height="wrap_content" android:layout_width="50pt"
					android:textColor="#FFF" android:text="ext2 module" android:textSize="20sp" 
					android:shadowColor="#000000" android:shadowRadius="3"  
        			android:shadowDx="1" android:shadowDy="1" android:layout_marginLeft="5dip"/>
				<ImageView android:id="@+id/AcSystemStatusExtImage"
					android:layout_height="wrap_content" android:layout_width="10pt"
					android:layout_marginRight="5dp" />
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:gravity="center" android:layout_marginLeft="5dip">
				<TextView android:layout_height="wrap_content" android:layout_width="50pt"
					android:textColor="#FFF" android:text="loop module"	android:textSize="20sp" 
					android:shadowColor="#000000" android:shadowRadius="3"  
        			android:shadowDx="1" android:shadowDy="1" android:layout_marginLeft="5dip"/>
				<ImageView android:id="@+id/AcSystemStatusLoopImage"
					android:layout_height="wrap_content" android:layout_width="10pt"
					android:layout_marginRight="5dp" />
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:gravity="center" android:layout_marginLeft="5dip">
				<TextView android:id="@+id/textRow04"
					android:layout_height="wrap_content" android:layout_width="50pt"
					android:textColor="#FFF" android:text="busybox" android:textSize="20sp" 
					android:shadowColor="#000000" android:shadowRadius="3"  
        			android:shadowDx="1" android:shadowDy="1" android:layout_marginLeft="5dip"/>
				<ImageView android:id="@+id/AcSystemStatusBusyboxImage"
					android:layout_height="wrap_content" android:layout_width="10pt"
					android:layout_marginRight="5dp" />
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:gravity="center" android:layout_marginLeft="5dip">
				<TextView android:layout_height="wrap_content" android:layout_width="50pt"
					android:textColor="#FFF" android:text="system image" android:textSize="20sp" 
					android:shadowColor="#000000" android:shadowRadius="2.5"  
        			android:shadowDx="1" android:shadowDy="1" android:layout_marginLeft="5dip"/>
				<ImageView android:id="@+id/AcSystemStatusSystemImage"
					android:layout_height="wrap_content" android:layout_width="10pt"
					android:layout_marginRight="5dp" />
				<Button android:id="@+id/AcSystemStatusFixImageButton" android:text="Fix"
					android:textStyle="bold" android:visibility="gone"
					android:clickable="false" android:layout_width="23pt"
					android:layout_height="40dip" android:layout_centerHorizontal="true"
					android:textSize="15sp" android:typeface="serif">
				</Button>
			</TableRow>
			<TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_marginTop="10dip" android:gravity="center">
				<Button android:id="@+id/AcSystemStatusCheckButton" android:text="Check"
					android:textStyle="bold" android:visibility="visible"
					android:layout_width="30dip" android:layout_height="50dip"
					android:layout_centerHorizontal="true" android:textSize="22sp"
					android:typeface="serif">
				</Button>
				<Button android:id="@+id/AcSystemStatusOkButton" android:text="Ok"
					android:textStyle="bold" android:visibility="visible"
					android:layout_width="wrap_content" android:layout_height="50dip"
					android:layout_centerHorizontal="true" android:textSize="22sp"
					android:typeface="serif">
				</Button>
			</TableRow>
		</TableLayout>
	 </ScrollView>
	</LinearLayout>
</LinearLayout>
